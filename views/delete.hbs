{{#if user.profile.firstName}}
<h1>{{user.profile.firstName}}'s Dashboard</h1>
{{/if}}
<a href='/dashboard'>Go to dashboard</a>


<h1>{{msg}}</h1>

{{#if usersArray}}




<dl>
