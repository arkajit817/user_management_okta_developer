    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </thead>
    <tbody>
      
      {{#each usersArray}}
      <tr>
        <form method="post">
          <td>{{profileDetails.firstName}}
          </td>
